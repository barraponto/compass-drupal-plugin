<% project_name = File.basename(Compass.configuration.project_path) %>
@import "<%= project_name %>-base";
@import "<%= project_name %>-skin-rtl";
@import "<%= project_name %>-fusion-skin-rtl";

// Map the fusion variables to the skin variables
$fusion-width: $<%= project_name %>-width;
$fusion-first-sidebar-width: $<%= project_name %>-first-sidebar-width;
$fusion-second-sidebar-width: $<%= project_name %>-second-sidebar-width;

// page.tpl.php
body { @extend .-<%= project_name %>-body; }

#skip { @extend .-<%= project_name %>-skip-link; }

#page { @extend .-<%= project_name %>-page; }

#header-group { @extend .-<%= project_name %>-header; }

#secondary-menu { @extend .-<%= project_name %>-secondary-menu-wrapper; }

#secondary-menu > .links { @extend .-<%= project_name %>-secondary-menu; }

#header-site-info { @extend .-<%= project_name %>-branding; }

#logo { @extend .-<%= project_name %>-logo; }

#site-name { @extend .-<%= project_name %>-site-name; }

#slogan { @extend .-<%= project_name %>-site-slogan; }

#primary-menu { @extend .-<%= project_name %>-primary-menu-wrapper; }

#primary-menu > .links { @extend .-<%= project_name %>-primary-menu; }

#main { @extend .-<%= project_name %>-main-section; }

.messages {
  &.status { @extend .-<%= project_name %>-messages-status; }
  &.warning { @extend .-<%= project_name %>-messages-warning; }
  &.error { @extend .-<%= project_name %>-messages-error; }
  &.help { @extend .-<%= project_name %>-messages-help; } }

#content-region {
  @extend .-<%= project_name %>-content;
  h1.title { @extend .-<%= project_name %>-title; }
  .feed-icons { @extend .-<%= project_name %>-feed-icons; } }

#content-tabs {
  @extend .-<%= project_name %>-tabs;
  .primary { @extend .-<%= project_name %>-primary-tabs; }
  .secondary { @extend .-<%= project_name %>-secondary-tabs; } }

// Fusion doesn't support missions, by default
// #mission { @extend .-<%= project_name %>-mission; }

#breadcrumb { @extend .-<%= project_name %>-breadcrumb; }  

#content-content {
  @extend .-<%= project_name %>-content-area;

  .node {
    @extend .-<%= project_name %>-node;
    .picture { @extend .-<%= project_name %>-node-picture; }
    .title { @extend .-<%= project_name %>-node-title; }
    .meta { @extend .-<%= project_name %>-node-meta; }
    .submitted { @extend .-<%= project_name %>-node-submitted; }
    .terms { @extend .-<%= project_name %>-node-terms; }
    .content { @extend .-<%= project_name %>-node-content; }
    .links { @extend .-<%= project_name %>-node-links; }
    &.node-sticky { @extend .-<%= project_name %>-node-sticky; }
    &.node-unpublished { @extend .-<%= project_name %>-node-unpublished; }
    &.node-by-viewer { @extend .-<%= project_name %>-node-by-viewer; }
    .preview & { @extend .-<%= project_name %>-node-preview; } }

  .profile {
    @extend .-<%= project_name %>-profile;
    .picture { @extend .-<%= project_name %>-profile-picture; }
    h3 { @extend .-<%= project_name %>-profile-category-title; }
    dl { @extend .-<%= project_name %>-profile-category-wrapper; }
    dt { @extend .-<%= project_name %>-profile-field-label; }
    dd { @extend .-<%= project_name %>-profile-field-value; } }

  .pager {
    @extend .-<%= project_name %>-pager;
    .pager-item { @extend .-<%= project_name %>-pager; }
    .pager-first { @extend .-<%= project_name %>-pager; }
    .pager-previous { @extend .-<%= project_name %>-pager; }
    .pager-current { @extend .-<%= project_name %>-pager; }
    .pager-next { @extend .-<%= project_name %>-pager; }
    .pager-last { @extend .-<%= project_name %>-pager; } }
}

// I guess Fusion has no equivalent to the Navigation bar
// #navigation { @extend .-<%= project_name %>-navigation; }

#primary-menu { @extend .-<%= project_name %>-menu; }

#primary-menu-inner > .menu > .expanded > .menu { @extend .-<%= project_name %>-submenu; }

#secondary-menu { @extend .-<%= project_name %>-menu; }

#footer { @extend .-<%= project_name %>-footer; }

#footer-message { @extend .-<%= project_name %>-footer-message; }

