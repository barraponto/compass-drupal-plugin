<% project_name = File.basename(Compass.configuration.project_path) %>
// Set the total width of the content and sidebars
$<%= project_name %>-width: 960px;
$<%= project_name %>-first-sidebar-width: 200px;
$<%= project_name %>-second-sidebar-width: 200px;

// Order the content and sidebars
// Possible values are 'middle', 'first' and 'last'
$<%= project_name %>-content-position: "middle";

// Set the basic typeface palette
$<%= project_name %>-proportional-typeface: Verdana, Tahoma, "DejaVu Sans", sans-serif;
$<%= project_name %>-monospaced-typeface: "Courier New", "DejaVu Sans Mono", monospace;

// Set the base font-size
$<%= project_name %>-base-font-size: 14px;

// Set the navigation wrapper dimensions
$<%= project_name %>-navigation-width: 100%;
$<%= project_name %>-navigation-height: 2.3em;

// Set the footer section dimensions for a fixed footer
$<%= project_name %>-footer-size: 150px;

// Declare the regions the <%= project_name %> skin supports
// Zen has no content region by default, see <%= project_name %>.info
$<%= project_name %>-supported-regions: header, sidebar-first, sidebar-second, footer;
