<% project_name = File.basename(Compass.configuration.project_path) %>
@import "drupal6/zen";
@import "<%= project_name %>-skin";
@import "_<%= project_name %>-base";

// Use this mixin to generate the Zen layout
@include zen-layout;

// Use this mixin to properly position the #navigation div
@include zen-navigation;

//Use this mixin to set the typefaces
@include zen-typefaces;

//Use this mixin to set the font sizes
@include zen-typography;

//Use this mixin to set a fixed footer
@include zen-footer;

/* page.tpl.php */
body { @extend .-<%= project_name %>-body; }

#skip-link { @extend .-<%= project_name %>-skip-link; }

#page { @extend .-<%= project_name %>-page; }

#header { @extend .-<%= project_name %>-header; }

#logo { @extend .-<%= project_name %>-logo; }

#name-and-slogan { @extend .-<%= project_name %>-branding; }

.region-header { }

#site-name { @extend .-<%= project_name %>-site-name; }

#site-slogan { @extend .-<%= project_name %>-site-slogan; }

#main { @extend .-<%= project_name %>-main; }

#content {
  @extend .-<%= project_name %>-content;
  h1.title { @extend .-<%= project_name %>-title; }
  .messages { @extend .-<%= project_name %>-messages; }
  .tabs { @extend .-<%= project_name %>-tabs; }
  .feed-icons { @extend .-<%= project_name %>-feed-icons; } }

.region-highlight { }

.region-content-top { } 

#mission { @extend .-<%= project_name %>-mission; }

#breadcrumb { @extend .-<%= project_name %>-breadcrumb; }  

#content-area {
  @extend .-<%= project_name %>-content-area;
  .pager { @extend .-<%= project_name %>-pager; } }

.region-content-bottom { }

#navigation { @extend .-<%= project_name %>-navigation; }

.region-navigation { }

.region-sidebar-first,
.region-sidebar-second {
  @extend .-<%= project_name %>-sidebar; }

#main-menu {
  @extend .-<%= project_name %>-menu;
  > li.expanded > ul.menu { @extend .-<%= project_name %>-submenu; } }
  
#footer { @extend .-<%= project_name %>-footer; }

#secondary-menu { @extend .-<%= project_name %>-menu; }

#footer-message { @extend .-<%= project_name %>-footer-message; }

.region-footer { }

.region-page-closure { }


/* block.tpl.php */
.block {
  // try scoping the selectors by region
  @extend .-<%= project_name %>-block;
  > h2 { @extend .-<%= project_name %>-block-title; }
  .content { @extend .-<%= project_name %>-block-content; }

  // these are Kit regions blocks, set as examples for any region specific block styling
  #content-content & {
    @extend .-<%= project_name %>-content-block;
    > h2 { @extend .-<%= project_name %>-content-block-title; }
    .content { @extend .-<%= project_name %>-content-block-content; } }

  .region-sidebar-first &,
  .region-sidebar-second & {
    @extend .-<%= project_name %>-sidebar-block;
    > h2 { @extend .-<%= project_name %>-sidebar-block-title; }
    .content { @extend .-<%= project_name %>-sidebar-block-content; } }

  .region-header & {
    @extend .-<%= project_name %>-header-block;
    > h2 { @extend .-<%= project_name %>-header-block-title; }
    .content { @extend .-<%= project_name %>-header-block-content; } }

  .region-footer & {
    @extend .-<%= project_name %>-footer-block;
    > h2 { @extend .-<%= project_name %>-footer-block-title; }
    .content { @extend .-<%= project_name %>-footer-block-content; } }
}


/* node.tpl.php */
.node {
  @extend .-<%= project_name %>-node;
  .picture { @extend .-<%= project_name %>-node-picture; }
  .title { @extend .-<%= project_name %>-node-title; }
  .meta { @extend .-<%= project_name %>-node-meta; }
  .submitted { @extend .-<%= project_name %>-node-submitted; }
  .terms { @extend .-<%= project_name %>-node-terms; }
  .content { @extend .-<%= project_name %>-node-content; }
  .links { @extend .-<%= project_name %>-node-links; }
  &.node-sticky { @extend .-<%= project_name %>-node-sticky; }
  &.node-unpublished { @extend .-<%= project_name %>-node-unpublished; }
  &.node-by-viewer { @extend .-<%= project_name %>-node-by-viewer; }
  .preview & { @extend .-<%= project_name %>-node-preview; } }


/* user-profile.tpl.php */
.profile {
  @extend .-<%= project_name %>-profile;
  .picture { @extend .-<%= project_name %>-profile-picture; }
  h3 { @extend .-<%= project_name %>-profile-category-title; }
  dl { @extend .-<%= project_name %>-profile-category-wrapper; }
  dt { @extend .-<%= project_name %>-profile-field-label; }
  dd { @extend .-<%= project_name %>-profile-field-value; } 
}

